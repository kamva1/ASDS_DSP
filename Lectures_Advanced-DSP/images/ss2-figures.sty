	    \addplot [draw=none, forget plot] coordinates {(0,0)};
	},
	anchor=origin,
    },
    stemaxis/.style={
        mathaxis,
        x=.8em,
        y=6ex,
        enlarge x limits={abs=1.2em},
        enlarge y limits={abs=1.2em},
    }
}

